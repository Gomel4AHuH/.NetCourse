@model ToDoApp.Models.ToDo

<!--Details/Delete-->
@if (ViewData["Title"].ToString() == "Details" || ViewData["Title"].ToString() == "Delete")
{
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Name</label>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Description</label>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Status</label>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.IsClosed)
        </div>
    </div>
}

<!--Edit/Create-->
@if (ViewData["Title"].ToString() == "Edit" || ViewData["Title"].ToString() == "Create")
{
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Name</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Description</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Description">
            <span asp-validation-for="Description" class="text-danger" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Status</label>
        <div class="col-sm-8">
            <input class="form-check-input" asp-for="IsClosed" />
        </div>
    </div>
    <input type="hidden" asp-for="EmployeeId">
}
