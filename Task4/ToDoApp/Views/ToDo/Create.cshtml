@model ToDoApp.Models.ToDo

@{
    ViewData["Title"] = "Create";
}

<partial name="_AlertMessages" />

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <form asp-action="Create">
            <partial name="_ToDoFormFields"/>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <input type="submit" asp-route-id="@Model?.Id" value="Create" class="btn btn-primary" />
                </div>
                <div class="col-sm-4 d-grid">
                    <a asp-action="IndexEmployee" asp-route-id="@Model?.EmployeeId" class="btn btn-info">Back to todos</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
