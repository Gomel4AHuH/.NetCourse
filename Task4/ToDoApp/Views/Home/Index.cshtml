@using Microsoft.AspNetCore.Identity
@using ToDoApp.Areas.Identity.Data

@inject SignInManager<ToDoAppUser> SignInManager
@inject UserManager<ToDoAppUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="text-center">
        <p>Please use links above for further actions.</p>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Welcome to ToDo application.</h1>
        <p>Please <a href="/Identity/Account/Login"> login</a> or <a href="/Identity/Account/Register"> register</a> before start.</p>
    </div>
}