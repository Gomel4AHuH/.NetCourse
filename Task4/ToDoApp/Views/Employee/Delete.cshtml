@model ToDoApp.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Error ! </strong>   @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"/>
    </div>
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Delete employee</h2>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Last name</label>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.LastName)
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">First name</label>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.FirstName)
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Middle name</label>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.MiddleName)
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Birthday</label>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.Birthday)
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Speciality</label>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.Speciality)
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Employment date</label>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.EmploymentDate)
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Employee photo</label>
            <div class="col-sm-8">
                <img src="/photos/@Model.EmployeePhotoPath" style="width:50px;height:50px;border-radius:50%" />
            </div>
        </div>

        <div class="row">
            <div class="offset-sm-4 col-sm-4 d-grid">
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#warning">
                    Delete
                </button>
            </div>
            <div class="col-sm-4 d-grid">
                <a asp-action="Index" class="btn btn-info">Back to employees</a>
            </div>
        </div>
    </div>
</div>

<!-- Warning Modal View-->
<div class="modal fade" id="warning" tabindex="-1" role="dialog" aria-labelledby="warningTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="warningTitle">Warning</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                Current employee profile with it's todos will be deleted.
                <br/>
                Do you confirm?
            </div>
            <form asp-action="Delete">
                <div class="modal-footer">
                    <div class="offset-sm-4 col-sm-4 d-grid">
                        <input type="submit" asp-action="Delete" value="Confirm" class="btn btn-danger"/>
                    </div>
                    <div class="col-sm-4 d-grid">
                        <button type="button" class="btn btn-info" data-bs-dismiss="modal">Cancel</button>
                    </<div>
                </div>
            </form>
        </div>
    </div>
</div>