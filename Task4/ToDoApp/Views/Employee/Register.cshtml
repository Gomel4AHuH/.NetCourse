@model ToDoApp.Dtos.Employee.Authorization.RegisterDto

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    var specialities = (string[])ViewData["Specialities"];
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Register" enctype="multipart/form-data">
    <h2>Create a new account.</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="row">
        <div class="form-floating mb-3">
            <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="User Name" />
            <label asp-for="UserName">User Name</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="First Name" />
            <label asp-for="FirstName">First Name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="Last Name" />
            <label asp-for="LastName">Last Name</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="MiddleName" class="form-control" autocomplete="middlename" aria-required="true" placeholder="Middle Name" />
            <label asp-for="MiddleName">Middle Name</label>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Birthday" type="date" class="form-control" autocomplete="birthday" aria-required="true" placeholder="Birthday" />
            <label asp-for="Birthday">Birthday</label>
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">            
            <span asp-validation-for="Speciality" class="text-danger"></span>
            <select class="form-select" asp-for="Speciality">
                @foreach (var item in @specialities)
                {
                    <option value=@item>@item</option>
                }
            </select>
            <label asp-for="Speciality">Speciality</label>
        </div>        
        <div class="form-floating mb-3">
            <input asp-for="EmploymentDate" type="date" class="form-control" autocomplete="employmentdate" aria-required="true" placeholder="EmploymentDate" />
            <label asp-for="EmploymentDate">Employment date</label>
            <span asp-validation-for="EmploymentDate" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="EmployeePhotoImage">
            <span asp-validation-for="EmployeePhotoImage" class="text-danger"></span>
        </div>        
    </div>
    
    <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
