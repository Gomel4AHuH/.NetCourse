@model ToDoApp.Dtos.Employee.Authorization.ChangePasswordDto

@{
    ViewData["Title"] = "Change password";
}

<partial name="_AlertMessages" />

<form asp-action="ChangePassword">
    <div class="row">
        <div class="col-md-8 mx-auto rounded border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>
            <input type="hidden" asp-for="Email">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Current password</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" asp-for="CurrentPassword">
                    <span asp-validation-for="CurrentPassword" class="text-danger" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">New password</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" asp-for="NewPassword">
                    <span asp-validation-for="NewPassword" class="text-danger" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Confirm new password</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" asp-for="NewPasswordConfirmation">
                    <span asp-validation-for="NewPasswordConfirmation" class="text-danger" />
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
                <div class="col-sm-4 d-grid">
                    <a asp-action="Edit" asp-controller="Employee" asp-route-id="@Model.Id" class="btn btn-info">Back to employee</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}